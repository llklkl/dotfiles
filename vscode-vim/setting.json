{
    "vim.showcmd": true,
    "vim.autoindent": true,
    "vim.useCtrlKeys": false,
    "vim.useSystemClipboard": true,
    "vim.incsearch": true,
    "vim.smartcase": true,
    "vim.ignorecase": true,
    "vim.leader": "<space>",
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 700,
    "vim.easymotion": true,
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Esc>"
            ]
        },
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "j"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "L"
            ],
            "after": [
                "$"
            ]
        },
        {
            "before": [
                "H"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "<leader>",
                "q"
            ],
            "commands": [
                ":q"
            ]
        },
        {
            "before": [
                "<leader>",
                "s"
            ],
            "after": [
                "<leader>",
                "<leader>",
                "2",
                "s"
            ]
        },
        {
            "before": [
                "g",
                "h"
            ],
            "commands": [
                "workbench.action.navigateBack"
            ]
        },
        {
            "before": [
                "g",
                "l"
            ],
            "commands": [
                "workbench.action.navigateForward"
            ]
        },
        {
            // 打开侧边栏，并移动焦点
            "before": [
                "<leader>",
                "e"
            ],
            "commands": [
                "workbench.action.focusSideBar"
            ]
        },
        {
            "before": [
                "g",
                "f"
            ],
            "commands": [
                "workbench.files.action.showActiveFileInExplorer"
            ]
        },
        {
            // 显示文档
            "before": [
                "t",
                "h"
            ],
            "commands": [
                "editor.action.showHover"
            ]
        },
        {
            // goto implementation
            "before": [
                "g",
                "i"
            ],
            "commands": [
                "editor.action.peekImplementation"
            ]
        },
        {
            // 下一个错误
            "before": [
                "]",
                "e"
            ],
            "commands": [
                "editor.action.marker.next"
            ]
        },
        {
            // 上一个错误
            "before": [
                "[",
                "e"
            ],
            "commands": [
                "editor.action.marker.prev"
            ]
        },
        {
            "before": [
                "t",
                "a"
            ],
            "commands": [
                "gitlens.toggleFileBlame"
            ]
        },
                {
            // 代码重构
            "before": [
                "g",
                "r"
            ],
            "commands": [
                "editor.action.rename"
            ]
        },
        {
            // 代码格式化
            "before": [
                "<leader>",
                "f"
            ],
            "commands": [
                "editor.action.formatDocument"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "L"
            ],
            // 解决会自动包含最后一个换行符的问题
            "after": [
                "g",
                "_"
            ]
        },
        {
            "before": [
                "H"
            ],
            "after": [
                "^"
            ]
        }
    ],
    "editor.lineNumbers": "relative",
    "vim.foldfix": true,
    "editor.cursorSurroundingLines": 5,
    "multiCommand.commands": [
        {
            "command": "multiCommand.multiEscape",
            "sequence": [
                // 聚焦到第一组编辑器上
                "workbench.action.focusFirstEditorGroup",
                // 同时触发 vim 的 esc 效果，避免一些bug 发生
                "extension.vim_escape",
                // 可选：关闭搜索栏图标
                "closeFindWidget",
                // 可选：关闭智能提示栏，有些时候会用到。
                "hideSuggestWidget",
                // 可选：关闭编辑器的提示，有时候 vscode 会报错，然后右下角弹窗口出来
                //      设定这个以后就可以用这个指令关闭了。
                "notifications.clearAll"
            ]
        }
    ],
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.statusBar.enabled": false,
    "gitlens.blame.format": "${date} ${author|15}",
    "gitlens.blame.dateFormat": "YYYY/MM/DD",
    "gitlens.keymap": "none",
    "gitlens.plusFeatures.enabled": false,
    "gitlens.virtualRepositories.enabled": false
}
